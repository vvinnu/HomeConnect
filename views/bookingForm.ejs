<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
  <title>Book a Service | HomeConnect</title>
</head>
<body class="bg-light">
  <%- include('partials/navbar') %>

  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card shadow p-4">
          <h3 class="text-center mb-4">Book a Service</h3>

          <% if (formErrors && formErrors.length > 0) { %>
            <div class="alert alert-danger">
              <ul class="mb-0">
                <% formErrors.forEach(function(error) { %>
                  <li><%= error.msg %></li>
                <% }) %>
              </ul>
            </div>
          <% } %>

          <form method="POST" action="/book-service">
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="ProviderID" class="form-label">Choose a Provider</label>
                <select name="ProviderID" id="ProviderID" class="form-select" required>
                  <option value="">-- Select --</option>
                  <% providers.forEach(provider => { %>
                    <option value="<%= provider.ProviderID %>">
                      <%= provider.FullName %> - <%= provider.ServiceType %>
                    </option>
                  <% }) %>
                </select>
              </div>

              <div class="col-md-6 mb-3">
                <label for="ServiceDate" class="form-label">Preferred Date & Time</label>
                <input type="datetime-local" name="ServiceDate" id="ServiceDate" class="form-control" required>
              </div>
            </div>

            <div class="d-grid">
              <button type="submit" class="btn btn-primary">Confirm Booking</button>
            </div>

            <p class="mt-3 text-center">
              <a href="/dashboard">‚Üê Back to Dashboard</a>
            </p>
          </form>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>
</body>
</html>
