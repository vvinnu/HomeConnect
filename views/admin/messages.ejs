<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head') %>
  <title>Admin Messages | HomeConnect</title>
</head>
<body>
  <div class="container py-5">
    <h2 class="fw-bold mb-4">Customer Messages</h2>

    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Email</th>
          <th>Message</th>
          <th>Sent At</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% messages.forEach((msg, index) => { %>
          <tr class="<%= msg.IsRead ? '' : 'table-warning' %>">
            <td><%= index + 1 %></td>
            <td><%= msg.Name %></td>
            <td><%= msg.Email %></td>
            <td><%= msg.Message %></td>
            <td><%= new Date(msg.CreatedAt).toLocaleString() %></td>
            <td><%= msg.IsRead ? 'Read' : 'Unread' %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
