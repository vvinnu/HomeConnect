<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head') %>
  <title>My Reviews | HomeConnect</title>
</head>
<body>
  <%- include('../partials/navbar', { isLoggedIn: isLoggedIn, role: role }) %>

  <div class="container py-5">
    <h3 class="text-center text-warning mb-4">üåü Customer Feedback</h3>

    <% if (reviews.length === 0) { %>
      <p class="text-center text-muted">You have not received any reviews yet.</p>
    <% } else { %>
      <div class="row">
        <% reviews.forEach(r => { %>
          <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-0">
              <div class="card-body">
                <h5 class="card-title text-primary">‚≠ê <%= r.Rating %> / 5</h5>
                <p class="card-text"><%= r.Comment %></p>
                <footer class="blockquote-footer">
                  <%= r.CustomerName %> on <%= new Date(r.CreatedAt).toLocaleDateString() %>
                </footer>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>

  <%- include('../partials/footer') %>
</body>
</html>
