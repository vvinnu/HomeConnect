<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head') %>
  <title>My Bookings | HomeConnect</title>
</head>
<body>
  <%- include('../partials/navbar', { isLoggedIn: isLoggedIn, role: role }) %>

  <div class="container py-5">
    <h3 class="text-center text-warning mb-4">üìò My Bookings</h3>

    <% if (bookings.length === 0) { %>
      <p class="text-center text-muted">No bookings found.</p>
    <% } else { %>
      <table class="table table-bordered table-hover align-middle">
        <thead class="table-warning">
          <tr>
            <th>Customer</th>
            <th>Contact</th>
            <th>Service Date</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% bookings.forEach(b => { %>
            <tr>
              <td><%= b.CustomerName %></td>
              <td>
                üìû <%= b.Phone %> <br>
                ‚úâÔ∏è <%= b.Email %>
              </td>
              <td><%= new Date(b.ServiceDate).toLocaleString() %></td>
              <td>
                <% if (b.Status === 'Pending') { %>
                  <form action="/providers/bookings/confirm/<%= b.BookingID %>" method="POST" class="d-inline">
                    <button class="btn btn-success btn-sm">Confirm</button>
                  </form>
                <% } else if (b.Status === 'Confirmed') { %>
                  <form action="/providers/bookings/complete/<%= b.BookingID %>" method="POST" class="d-inline">
                    <button class="btn btn-primary btn-sm">Mark as Completed</button>
                  </form>
                <% } %>

                <span class="badge bg-<%= 
                  b.Status === 'Completed' ? 'success' : 
                  b.Status === 'Cancelled' ? 'danger' : 
                  b.Status === 'Pending' ? 'secondary' : 
                  'info' 
                %>">
                  <%= b.Status %>
                </span>
              </td>            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>

  <%- include('../partials/footer') %>
</body>
</html>
