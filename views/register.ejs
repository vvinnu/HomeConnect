<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
  <title>Register | HomeConnect</title>
</head>
<body class="bg-light">

  <%- include('partials/navbar', { isLoggedIn }) %>

  <main class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow p-4 w-100" style="max-width: 500px; border: 2px solid #ffc107; border-radius: 10px;">
      <h2 class="text-center text-primary mb-4">Register</h2>

      <% if (formErrors && formErrors.length > 0) { %>
        <div class="alert alert-danger">
          <ul class="mb-0">
            <% formErrors.forEach(function(error) { %>
              <li><%= error.msg %></li>
            <% }) %>
          </ul>
        </div>
      <% } %>

      <form method="POST" action="/register">
        <div class="mb-3">
          <label for="FullName" class="form-label">Full Name</label>
          <input type="text" name="FullName" class="form-control" id="FullName" required>
        </div>

        <div class="mb-3">
          <label for="Username" class="form-label">Username</label>
          <input type="text" name="Username" class="form-control" id="Username" required>
        </div>

        <div class="mb-3">
          <label for="Password" class="form-label">Password</label>
          <input type="password" name="Password" class="form-control" id="Password" required>
        </div>

        <div class="mb-3">
          <label for="Email" class="form-label">Email</label>
          <input type="email" name="Email" class="form-control" id="Email">
        </div>

        <div class="mb-3">
          <label for="Phone" class="form-label">Phone</label>
          <input type="tel" name="Phone" class="form-control" id="Phone">
        </div>

        <div class="mb-3">
          <label for="Role" class="form-label">Role</label>
          <select name="Role" class="form-select" id="Role" required>
            <option value="">Select Role</option>
            <option value="customer">Customer</option>
            <option value="provider">Provider</option>
          </select>
        </div>

        <div class="d-grid">
          <button type="submit" class="btn btn-warning">Register</button>
        </div>

        <p class="mt-3 text-center">
          Already have an account? <a href="/login">Login here</a>
        </p>
      </form>
    </div>
  </main>

  <%- include('partials/footer') %>

</body>
</html>
