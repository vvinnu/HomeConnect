    <form id="contactForm" class="row g-3 mt-4 justify-content-center">
      <div class="col-md-4">
        <input type="text" class="form-control" name="name" placeholder="Your Name" required>
      </div>
      <div class="col-md-4">
        <input type="email" class="form-control" name="email" placeholder="Your Email" required>
      </div>
      <div class="col-md-8">
        <textarea class="form-control" rows="3" name="message" placeholder="Your Message" required></textarea>
      </div>
      <div class="col-md-8">
        <button type="submit" class="btn btn-warning fw-bold">Send Message</button>
      </div>
          <div class="col-md-8">
        <div id="contactAlert" class="alert d-none mt-3" role="alert"></div>
      </div>
    </form>
  </div>
</section>

    <!-- Call to Action -->
    <section class="text-center mt-5">
      <% if (!isLoggedIn) { %>
        <a href="/register" class="btn btn-warning ms-3 fw-bold">Join Now</a>
        <p class="mt-2">Are you a service provider? <a href="/register/provider">Sign up to offer your services</a></p>
      <% } else { %>
        <% if (role === 'provider') { %>
          <a href="/providers/dashboard" class="btn btn-outline-primary btn-lg px-4">Go to Dashboard</a>
        <% } else { %>
