        <% } %>
      <% } %>
    </section>
  </main>


  <%- include('partials/footer') %>
<!-- AJAX script -->
<script>
document.getElementById('contactForm').addEventListener('submit', async function(e) {
  e.preventDefault();

  const name = this.name.value;
  const email = this.email.value;
  const message = this.message.value;
  const feedback = document.getElementById('contactAlert');

  try {
    const res = await fetch('/send-message', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ name, email, message })
    });
    
    const data = await res.json();

    if (data.success) {
      feedback.classList.remove('d-none');
      feedback.innerHTML = '<span class="text-success fw-bold">' + data.msg + '</span>';
      this.reset();
    } else {
      feedback.classList.remove('d-none');
      feedback.innerHTML = '<span class="text-danger fw-bold">' + data.msg + '</span>';
    }
  } catch (err) {
    console.error(err);
    feedback.classList.remove('d-none');
    feedback.innerHTML = '<span class="text-danger fw-bold">Failed to send message.</span>';
  }
});
</script></body>
